{
  "compilerOptions": {    
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],    
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",    
    "strict": true,    
    "esModuleInterop": true,
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}